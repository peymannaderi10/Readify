{
  "manifest_version": 2,
  "name": "Selection Box",
  "description": "Show a white box below selected text",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css":["styles.css"]
      
    }
],
"content_security_policy": "script-src 'self'; object-src 'self';",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "storage", "tabs","https://text-summarize-pro.p.rapidapi.com","webNavigation","<all_urls>"]
}
