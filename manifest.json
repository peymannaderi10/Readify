{
    "manifest_version": 3,
    "name": "Readify: Your Productivity Companion",
    "description": "Readify is a powerful browser extension that allows users to customize any webpage or online reading content to their own liking and preferences.",
    "version": "1.2",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "logoExt.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle",
            "css": ["styles.css"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["activeTab", "storage", "scripting", "identity", "identity.email"],
    "host_permissions": ["<all_urls>"],
    "icons": {
        "128": "logo.png"
    }
}
