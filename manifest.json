{
  "manifest_version": 2,
  "name": "Readify BETA v1.0",
  "description": "Readify is a powerful browser extension that allows users to customize any webpage or online reading content to their own liking and preferences.",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "storage", "tabs", "webNavigation", "<all_urls>"],
  "icons": {
    "128": "logo.png"
  }
}
