{
  "manifest_version": 2,
  "name": "Bionic Reader",
  "version": "1.0",
  "description": "A Chrome extension to bold the first 30-50% of each word on a webpage",
  "permissions": ["storage", "tabs", "<all_urls>"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Bionic Reader"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "web_accessible_resources": [
    "popup.html"
  ]
}
